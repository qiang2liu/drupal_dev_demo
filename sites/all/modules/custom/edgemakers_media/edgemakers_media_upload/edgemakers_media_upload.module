      }

      if ($i == count($my_media_nodes)) {
        $class = 'last';
      }

      $node_thumb = _get_media_thumb($node);

      $html .= '<li class="' . $class . '">
              <span class="mediathumb ' . $node->title . ' ">
                <img src="' . $node_thumb . '"/>
              </span>';
      $edit_url = l('<span class =""></span>', 'node/' . $node->nid, array(
          'html' => true,
          'attributes' => array(
            'nid' => $node->nid,
            'class' => array('studio-media-list-item-link'),
          ),
                )
        );
      $html .= $edit_url;

      $html .= '</li>';

      $i++;
    }

	}

	$html .= '</div>';

	return $html;
}

