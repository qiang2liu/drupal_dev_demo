function _create_tmp_js($content) {
  $tmp_dir = file_directory_temp();
  $tmp_file_name = $tmp_dir . '/upclass_ctools_class_' . round(microtime(true)*1000) . '.js';
// print($tmp_file_name);
  $fh = fopen($tmp_file_name, 'w') or die("can't open file");
  fwrite($fh, $content);
  fclose($fh);
  return $tmp_file_name;
}

