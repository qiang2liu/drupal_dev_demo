function themuraly_refresh($js = FALSE) {

  if (!$js) {
    // this is js only
    return;
  }

  ctools_include('ajax');
  ctools_include('modal');
  ctools_modal_add_js();
  $commands = array();
  $commands[] = ajax_command_html('.some-class', 'some-value');
  ajax_render($commands);

}

